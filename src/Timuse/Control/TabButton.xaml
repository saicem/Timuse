<UserControl x:Class="Timuse.Control.TabButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Timuse.Control"
             mc:Ignorable="d" Height="64" Width="210">
    <UserControl.Resources>
        <LinearGradientBrush x:Key="BackgroundActive">
            <GradientStop Color="#396AFC" Offset="0"/>
            <GradientStop Color="#2A4AFF" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Resources>
    <Grid>
        <Border CornerRadius="8" Background="{StaticResource BackgroundActive}"/>
        <StackPanel Margin="32,0,0,0" VerticalAlignment="Center" Orientation="Horizontal">
            <Border Background="White" Height="36" Width="36" CornerRadius="8"/>
            <TextBlock Margin="17,0,0,0" Text="概览" Foreground="White" VerticalAlignment="Center" FontSize="20"/>
        </StackPanel>
    </Grid>
</UserControl>
