<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="TimuseWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TimuseWinUI"
    xmlns:c="using:TimuseWinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#F2E4ECF1">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ContextFlyout>
            <MenuFlyout>
                <MenuFlyoutItem Text="测试" Icon="Add"/>
            </MenuFlyout>
        </Grid.ContextFlyout>

        <Rectangle x:Name="titleBar" Canvas.ZIndex="1"></Rectangle>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="224"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="32 0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <c:Logo Width="64"/>
                    <TextBlock VerticalAlignment="Bottom" Foreground="#7D87A5" FontSize="20" FontWeight="Bold" TextAlignment="Right" Width="96">Timuse</TextBlock>
                </StackPanel>
                <c:TabButton Height="48" Margin="0 64 0 8" Text="概览"/>
                <c:TabButton Height="48" Margin="0 8" Text="统计"/>
                <c:TabButton Height="48" Margin="0 8" Text="详细"/>
                <c:TabButton Height="48" Margin="0 8" Text="分类"/>
                <c:TabButton Height="48" Margin="0 8" Text="设置"/>
            </StackPanel>
            <Grid Grid.Column="1" Background="#F9F9F9" Margin="0 0 30 30" CornerRadius="8">
                <Frame x:Name="PageFrame"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
